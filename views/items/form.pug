extends shared/_master

block content
    form(action="/items", method="POST")
        label
            | Name:
            input(type="text", name="name")
        button
            | Create
        label
            | Interests
            select(name="interests")
                each value in [1, 2, 3, 4]
                    option(value=value)
                        =value
        label
            | Interests 2
            each value in [1, 2, 3, 4]
                label
                    =value
                    input(type="checkbox" value=value, name="int2")
    form(action="/items", method="GET")
        label
            | Name2:
            input(type="text", name="name2")
        button
            | GET